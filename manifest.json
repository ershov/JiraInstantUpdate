{
  "manifest_version": 3,
  "name": "Jira Instant Update",
  "short_name": "Jira Instant Update",
  "version": "1.0.8",
  "icons": {
    "128": "icon3-128.png",
    "64": "icon3-64.png",
    "48": "icon3-48.png",
    "16": "icon3-16.png"
  },
  "description": "Instantly see Jira ticket updates.",
  "host_permissions": [
    "*://jira.mongodb.org/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon3-128.png"],
      "matches": ["*://jira.mongodb.org/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": [ "*://jira.mongodb.org/*" ],
      "all_frames": false,
      "js": ["script.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ]
}
